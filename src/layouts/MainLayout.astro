---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import "../styles/global.css";
---

<html lang="ru" class="scroll-smooth scroll-p-4 md:scroll-p-8 lg:scroll-p-10">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Палаточный лагерь «Седой Кшурт» — отдых в горах Северной Осетии: походы, мастер-классы и вечерние костры."
    />
    <meta name="robots" content="index, follow" />

    <meta
      property="og:title"
      content="Седой Кшурт — Палаточный лагерь в Северной Осетии"
    />
    <meta
      property="og:description"
      content="Отдых на природе: палатки, походы, костры. Северная Осетия, 2025"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/android-chrome-192x192.png" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Седой Кшурт — Палаточный лагерь в Северной Осетии"
    />
    <meta
      name="twitter:description"
      content="Отдых на природе: палатки, походы, костры. Северная Осетия, 2025"
    />
    <meta name="twitter:image" content="/android-chrome-192x192.png" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="canonical" href="https://camping-kshurta.ru/" />

    <title>Кемпинг &quot;Седой Кшурт&quot;</title>
  </head>
  <body class="text-primary flex flex-col gap-12.5">
    <Header />

    <main class="flex flex-col section-gap">
      <slot />
    </main>

    <Footer />
  </body>
</html>
